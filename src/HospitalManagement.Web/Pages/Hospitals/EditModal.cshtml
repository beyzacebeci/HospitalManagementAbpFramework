@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model HospitalManagement.Web.Pages.Hospitals.EditModalModel
@{
    Layout = null;
}


<form method="post" id="EditHospitalModal" asp-page="/Hospitals/EditModal">
    <abp-modal>
        <abp-modal-header title="Update"></abp-modal-header>
        <abp-modal-body>
            <abp-tabs name="edit-hospital-modal-tabs">
                <abp-tab title="Hospital Information" class="mt-3">
                    <div id="hospital-information-wrapper" class="mt-3">
                        <abp-input asp-for="Id" />
                        <abp-input asp-for="EditingHospital.Name" label="Hospital Name" />
                    </div>
                </abp-tab>
                <abp-tab title="Departments">
                    <div id="department-list-wrapper" class="mt-3">
                        @for (var i = 0; i < Model.Departments.Count; i++)
                        {
                            var department = Model.Departments[i];
                            <abp-input abp-id-name="@Model.Departments[i].IsSelected" asp-for="@department.IsSelected" label="@department.Name" />
                            <input abp-id-name="@Model.Departments[i].Name" asp-for="@department.Name" />
                        }
                    </div>
                </abp-tab>
            </abp-tabs>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>